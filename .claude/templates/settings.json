{
  "permissions": {
    "allow": [],
    "deny": []
  },
  "notifications": {
    "mode": "sounds",
    "voice": "alfred",
    "sound_theme": "default",
    "quiet_hours": false,
    "_comment": "alfred is a sound pack - use mode='sounds' and voice='alfred' (lowercase)",
    "_available_modes": "voice (full speech), sounds (simple audio), off (silent)",
    "_available_voices_for_mode_voice": "Zoe (Premium), Jamie (Premium), albert, daniel, samantha, alex, eddy",
    "_available_sound_packs_for_mode_sounds": "alfred (context-aware voice clips), default (generic sounds), classic (ding/chime)"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/voice_notifications/handler.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/voice_notifications/handler.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/voice_notifications/handler.py"
          }
        ]
      }
    ]
  }
}