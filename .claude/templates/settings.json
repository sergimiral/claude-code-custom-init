{
  "permissions": {
    "allow": [],
    "deny": []
  },
  "notifications": {
    "mode": "soundpack",
    "soundpack": "alfred",
    "voice_macos": "daniel",
    "voice_elevenlabs": "",
    "voice_openai": "",
    "quiet_hours": false,
    "_schema_version": "3.0",
    "_comment": "Clean single-mode architecture with graceful fallbacks",
    "_modes": {
      "default": "Simple notification sounds",
      "soundpack": "Custom sound packs (alfred, jarvis, etc.)",
      "voice_soundpack": "Sound pack with voice fallback", 
      "voice_macos": "macOS built-in TTS voices",
      "voice_elevenlabs": "ElevenLabs AI voices (requires API key)",
      "voice_openai": "OpenAI TTS voices (requires API key)",
      "off": "Silent mode"
    },
    "_config_fields": {
      "soundpack": "Sound pack name (alfred, jarvis, default, classic)",
      "voice_macos": "macOS voice name (daniel, samantha, alex, albert)",
      "voice_elevenlabs": "ElevenLabs voice ID (requires API setup)",
      "voice_openai": "OpenAI voice name (nova, alloy, echo, etc.)"
    },
    "_fallback_chain": "Each mode gracefully falls back to simpler modes if config missing or fails"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/bin/run-hook.sh hooks/voice_notifications/handler.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/bin/run-hook.sh hooks/voice_notifications/handler.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/bin/run-hook.sh hooks/voice_notifications/handler.py"
          }
        ]
      }
    ]
  }
}